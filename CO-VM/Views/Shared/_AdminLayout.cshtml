<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CO_VM</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CO_VM.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .sidebar-row {
            display: block;
            width: 100%;
            padding: 12px 16px;
            border: 1px solid #dee2e6;
            border-radius: 6px;
            text-decoration: none;
            color: #000;
            background-color: #f8f9fa;
            transition: background-color 0.2s ease;
        }

        .sidebar-row:hover {
            background-color: #e2e6ea;
        }

        .sidebar-row + .sidebar-row {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("AdminHome", "Vaccine")">
                <img src="~/Images/newlogo.jpg" alt="Avatar Logo" style="width:50px;" class="rounded-pill">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar"
                    aria-controls="mynavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Vaccine")" class="nav-link text-white">Home</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="manageUsersDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Manage Users
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="manageUsersDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("AddUser","Admin")">Add</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("UpdateUser","Admin")">Update</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("DeleteUser","Admin")">Delete</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ViewUser","Admin")">View</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Status", "Admin")">Update Status</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="manageVaccinesDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Manage Vaccines
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="manageVaccinesDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("AddVaccine","Admin")">Add</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("UpdateVaccine","Admin")">Update</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("DeleteVaccine","Admin")">Delete</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ViewVaccine","Admin")">View</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="certificatesDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Certificates
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="certificatesDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("GenerateAllCertificates","Certificate")">Add Certificate</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Certificate","Certificate")">Update Certificate</a></li>
                        </ul>
                    </li>
                </ul>

                <!-- Right Icon for Offcanvas -->
                <button class="btn border-0 ms-auto" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#adminSidebar" aria-controls="adminSidebar">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
    </nav>

    <!-- Right Sidebar -->
    <div class="offcanvas offcanvas-end" style="background-color:lightgray" tabindex="-1"
         id="adminSidebar" aria-labelledby="adminSidebarLabel">
        <div class="offcanvas-header">
            <h5 id="adminSidebarLabel">Admin Menu</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="d-grid gap-2">
                <ul class="nav flex-column">
                    @* <li class="nav-item">
                        <a href="@Url.Action("AdminHome", "Vaccine")" class="sidebar-row">Dashboard</a>
                    </li><br /> *@
                    <li class="nav-item">
                        <a href="@Url.Action("Logout", "Vaccine")" class="sidebar-row">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div style="margin-top: 100px;">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
