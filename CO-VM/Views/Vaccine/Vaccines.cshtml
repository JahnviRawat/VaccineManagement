@model List<CO_VM.Models.Vaccine>

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #f1f8ff);
        min-height: 100vh;
        padding-bottom: 3rem;
        font-family: 'Segoe UI', sans-serif;
    }

    .search-bar-container {
        margin-top: 8rem;
        margin-bottom: 3rem;
        display: flex;
        justify-content: center;
    }

    .search-form {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        background: #fff;
        padding: 1.5rem 2rem;
        border-radius: 1.25rem;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
        max-width: 960px;
        width: 100%;
        justify-content: center;
    }

        .search-form input[type="text"] {
            padding: 0.75rem 1.25rem;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 2rem;
            width: 200px;
            transition: box-shadow 0.2s;
        }

            .search-form input[type="text"]:focus {
                outline: none;
                box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.2);
                border-color: #1976d2;
            }

        .search-form input[type="submit"] {
            background: linear-gradient(to right, #1976d2, #64b5f6);
            color: #fff;
            font-weight: bold;
            padding: 0.7rem 2rem;
            border: none;
            border-radius: 2rem;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            .search-form input[type="submit"]:hover {
                background: linear-gradient(to right, #1565c0, #42a5f5);
            }

    .vaccine-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
        padding: 0 2rem;
    }

    .card {
        width: 22rem;
        border: none;
        border-radius: 1rem;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 28px rgba(0, 0, 0, 0.15);
        }

    .card-title {
        font-weight: 700;
        color: #1a237e;
    }

    .card-text, .card p {
        color: #455a64;
        font-size: 0.95rem;
    }

    .btn-primary {
        background: linear-gradient(to right, #2196f3, #64b5f6);
        border: none;
        font-weight: 600;
        padding: 0.5rem 1.2rem;
        border-radius: 0.5rem;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #1976d2, #42a5f5);
        }
</style>

<div class="search-bar-container">
    <form method="post" class="search-form" autocomplete="off">
        <input type="text" name="vaccinename" placeholder="Vaccine Name" />
        <input type="text" name="centres" placeholder="Centre Name" />
        <input type="text" name="city" placeholder="City" />
        <input type="text" name="state" placeholder="State" />
        <input type="submit" value="Search" />
    </form>
</div>

<div class="vaccine-container">
    @foreach (var v in Model)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@v.VaccineName</h5>
                <p class="card-text">@v.Description</p>
                <p><strong>Manufacturer:</strong> @v.Manufacturer</p>
                <p><strong>Doses Required:</strong> @v.DosesRequired</p>
                @* <p><strong>Price:</strong> ₹@v.Price</p> *@
                <a asp-controller="Vaccine" asp-action="BookSlotForUser" asp-route-vaccineId="@v.VaccineId" class="btn btn-primary mt-2">
                    Book Slot
                </a>
            </div>
        </div>
    }
</div>
