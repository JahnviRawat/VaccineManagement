@model List<CO_VM.Models.Vaccine>

<style>
    body {
        min-height: 100vh;
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .vaccine-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: flex-start;
        gap: 2rem;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }
    .card {
        border-radius: 18px;
        box-shadow: 0 6px 24px rgba(0, 60, 120, 0.12), 0 1.5px 6px rgba(0, 60, 120, 0.08);
        border: none;
        transition: transform 0.2s, box-shadow 0.2s;
        background: #fafdff;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .card:hover {
        transform: translateY(-8px) scale(1.03);
        box-shadow: 0 12px 32px rgba(0, 60, 120, 0.18), 0 3px 12px rgba(0, 60, 120, 0.10);
    }
    .card-img-top {
        border-top-left-radius: 18px;
        border-top-right-radius: 18px;
        object-fit: cover;
        width: 100%;
        height: 220px;
        background: #e0eafc;
    }
    .card-body {
        padding: 1.5rem;
        width: 100%;
        text-align: left;
    }
    .vaccine-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #1a237e;
        margin-bottom: 0.5rem;
    }
    .vaccine-label {
        font-weight: 600;
        color: #1976d2;
    }
    .vaccine-value {
        color: #333;
    }
   
</style>

<div class="vaccine-container">
    @foreach (var i in Model)
    {
        <div class="card" style="width:320px; min-height:480px;">
            <img class="card-img-top" src="/@i.Image" alt="Vaccine image">
            <div class="card-body">
                <div class="vaccine-title">@i.VaccineName</div>
                <div>
                    <span class="vaccine-label">Vaccine ID:</span>
                    <span class="vaccine-value"> @i.VaccineId</span>
                </div>
                <div>
                    <span class="vaccine-label">Manufacturer:</span>
                    <span class="vaccine-value"> @i.Manufacturer</span>
                </div>
                <div>
                    <span class="vaccine-label">Doses Required:</span>
                    <span class="vaccine-value"> @i.DosesRequired</span>
                </div>
                <div>
                    <span class="vaccine-label">Stock:</span>
                    <span class="vaccine-value"> @i.Stock</span>
                </div>
                <div>
                    <span class="vaccine-label">Price:</span>
                    <span class="vaccine-value"> $@i.Price</span>
                </div>
                <div style="margin-top:1rem;">
                    <span class="vaccine-label">Description:</span>
                    <div class="vaccine-value" style="white-space: pre-line;">@i.Description</div>
                </div>
            </div>
        </div>
    }
</div>
