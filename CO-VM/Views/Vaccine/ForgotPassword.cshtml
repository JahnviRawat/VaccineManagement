@model CO_VM.Controllers.ForgotPasswordViewModel

@{
 
    ViewBag.Title = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #e3f0ff, #b6d0f7);
            height: 100vh;
            overflow: hidden;
        }

        .split-screen {
            display: flex;
            height: 100vh;
        }

        .form-half {
            width: 50%;
            background: linear-gradient(135deg, #f1f8ff, #dceeff);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            overflow-y: auto;
        }

        .info-half {
            width: 50%;
            background: url('/password-security.jpg') no-repeat center center;
            background-size: cover;
            position: relative;
            color: #fff;
            padding: 60px;
            background-color: rgb(9 87 149 / 60%);
            background-blend-mode: overlay;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .info-half h2 {
                font-size: 32px;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .info-half ul {
                font-size: 18px;
                padding-left: 20px;
                list-style-type: disc;
            }

        .form-card {
            background: #ffffff;
            border-radius: 18px;
            box-shadow: 0 6px 32px rgba(0, 60, 120, 0.10);
            padding: 2.5rem 2rem;
            width: 100%;
            max-width: 480px;
        }

        .form-title {
            color: #1976d2;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .form-label {
            font-weight: 600;
            color: #1e293b;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #b6d0f7;
            margin-bottom: 1rem;
        }

            .form-control:focus {
                border-color: #1976d2;
                box-shadow: 0 0 0 0.2rem rgba(25,118,210,.15);
            }

        .btn-primary {
            background: linear-gradient(90deg, #1976d2 60%, #64b5f6 100%);
            border: none;
            border-radius: 8px;
            font-weight: 600;
        }

            .btn-primary:hover {
                background: linear-gradient(90deg, #1565c0 60%, #42a5f5 100%);
            }

        .alert-danger {
            border-radius: 8px;
            font-size: 0.98rem;
        }

        media (max-width: 991px) {
            .split-screen

        {
            flex-direction: column;
        }

        .form-half, .info-half {
            width: 100%;
            height: auto;
        }

        .info-half {
            padding: 30px 20px;
        }

        }
    </style>
</head>
<body>
    <div class="split-screen">
        <!-- Form Half -->
        <div class="form-half">
            <div class="form-card">
                <h2 class="form-title">Forgot Password</h2>
                <form method="post" asp-action="ForgotPassword" autocomplete="off">
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" name="Username" class="form-control" value="@ViewBag.Username" required autofocus />
                    </div>

                    @if (ViewBag.SecurityQuestion != null)
                    {
                        <div class="mb-3">
                            <label class="form-label">Security Question</label>
                            <input type="text" class="form-control" value="@ViewBag.SecurityQuestion" disabled />
                            <input type="hidden" name="SecurityQuestion" value="@ViewBag.SecurityQuestion" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Your Answer</label>
                            <input type="text" name="SecurityAnswer" class="form-control" value="@ViewBag.SecurityAnswer" required />
                        </div>
                    }

                    @if (ViewBag.AnswerVerified == true)
                    {
                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            <input type="password" name="NewPassword" class="form-control" required />
                        </div>
                    }

                    <button type="submit" class="btn btn-primary w-100">Submit</button>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                    }
                </form>
            </div>
        </div>

        <!-- Info Half -->
        <div class="info-half">
            <h2>Account Recovery Steps</h2>
            <ul>
                <li>Enter your registered username.</li>
                <li>Answer the security question correctly.</li>
                <li>Reset your password securely.</li>
                <li>Need help? Contact admin support.</li>
            </ul>
        </div>
    </div>
</body>
</html>
