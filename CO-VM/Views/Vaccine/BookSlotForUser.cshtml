@{
    var user = ViewBag.User as CO_VM.Models.User;
    var vaccines = ViewBag.Vaccines as List<CO_VM.Models.Vaccine>;
    var centres = ViewBag.Centres as List<CO_VM.Models.Centre>;
    int selectedVaccineId = ViewBag.SelectedVaccineId ?? 0;
}

<style>
    body {
        min-height: 100vh;
        background: linear-gradient(135deg, #e3f0ff 0%, #b6d0f7 50%, #6fa8dc 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .booking-container {
        background: rgba(255,255,255,0.95);
        border-radius: 18px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
        padding: 2.5rem 2rem 2rem 2rem;
        max-width: 480px;
        margin: 48px auto;
    }
    .booking-title {
        font-weight: 700;
        color: #2563eb;
        margin-bottom: 1.5rem;
        text-align: center;
        letter-spacing: 1px;
    }
    .form-label {
        font-weight: 600;
        color: #1e293b;
    }
    .form-control {
        border-radius: 8px;
        border: 1px solid #b6d0f7;
        margin-bottom: 1rem;
        font-size: 1rem;
        transition: border-color 0.2s;
    }
    .form-control:focus {
        border-color: #2563eb;
        box-shadow: 0 0 0 2px #b6d0f7;
    }
    .btn-success {
        background: linear-gradient(90deg, #2563eb 0%, #6fa8dc 100%);
        border: none;
        font-weight: 600;
        padding: 0.5rem 1.5rem;
        border-radius: 8px;
        transition: background 0.2s;
    }
    .btn-success:hover {
        background: linear-gradient(90deg, #1e40af 0%, #4682b4 100%);
    }
    .btn-secondary {
        border-radius: 8px;
        font-weight: 600;
        padding: 0.5rem 1.5rem;
    }
    .alert-danger {
        border-radius: 8px;
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }
</style>

<div class="booking-container">
    <h2 class="booking-title">Book Vaccination Slot for @user.FullName</h2>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="BookSlotForUser" method="post">
        <div class="mb-3">
            <label class="form-label">Vaccine</label>
            <select name="vaccineId" class="form-control" required>
                <option value="">Select</option>
                @foreach (var v in vaccines)
                {
                    <option value="@v.VaccineId">@v.VaccineName</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Centre</label>
            <select name="centreId" class="form-control" required>
                <option value="">Select</option>
                @foreach (var c in centres)
                {
                    <option value="@c.CentreId">@c.CentreName</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Slot Date</label>
            <input type="date" name="slotDate" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Slot Time</label>
            <input type="time" name="slotTime" class="form-control" required />
        </div>
        <div class="d-flex justify-content-between align-items-center mt-4">
            <button type="submit" class="btn btn-success">Book Slot</button>
            <a asp-action="UserDashboard" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
