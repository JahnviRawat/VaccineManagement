@model CO_VM.Models.VaccineCertificate

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Upload Vaccine Certificate</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, rgba(9, 87, 149, 0.6), rgba(9, 87, 149, 0.6));
            height: 100vh;
            overflow: hidden;
        }

        .split-screen {
            display: flex;
            height: 100vh;
            padding-top: 60px;
        }

        .form-half {
            width: 50%;
            background: #f9fbff;
            padding: 2rem;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .info-half {
            width: 50%;
            background: linear-gradient(135deg, rgba(9, 87, 149, 0.6), rgba(9, 87, 149, 0.6));
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px;
        }

            .info-half h2 {
                font-weight: 700;
                font-size: 32px;
                margin-bottom: 20px;
            }

            .info-half p {
                font-size: 18px;
                line-height: 1.6;
            }

        .upload-card {
            background: #fff;
            padding: 2rem 2.5rem;
            border-radius: 16px;
            box-shadow: 0 6px 32px rgba(0, 60, 120, 0.1);
            width: 100%;
            max-width: 500px;
        }

        .form-label {
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .form-control {
            margin-bottom: 1rem;
        }

        .btn-submit {
            width: 100%;
            padding: 10px;
            font-size: 1.05em;
            border-radius: 8px;
            background: linear-gradient(90deg, #16a34a 0%, #4ade80 100%);
            border: none;
            color: white;
            font-weight: 600;
        }

            .btn-submit:hover {
                background: linear-gradient(90deg, #15803d 0%, #22c55e 100%);
            }

        media (max-width: 991px) {
            .split-screen

        {
            flex-direction: column;
        }

        .form-half, .info-half {
            width: 100%;
            height: auto;
        }

        .info-half {
            padding: 40px 24px;
        }

        }
    </style>
</head>
<body>
    <div class="split-screen">
        <!-- Left Info Panel -->
        <div class="info-half">
            <h2>Upload Vaccine Certificate</h2>
            <p>
                Upload the official vaccine certificate in PDF format using the Book ID provided during registration.
                <br /><br />
                Ensure the file is under the allowed size and in correct format (.pdf).
            </p>
        </div>

        <!-- Right Form Panel -->
        <div class="form-half">
            <div class="upload-card">
                <form method="post" enctype="multipart/form-data" asp-action="certificate">
                    <div class="mb-3">
                        <label class="form-label">Booking ID</label>
                        <input type="text" name="id" class="form-control" placeholder="Enter Booking ID" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Upload Certificate (PDF only)</label>
                        <input type="file" name="t2" accept=".pdf" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-submit mt-3">Upload Certificate</button>

                    @if (ViewBag.found != null)
                    {
                        <div class="mt-3 text-success">@ViewBag.found</div>
                    }
                </form>
            </div>
        </div>
    </div>
</body>
</html>
