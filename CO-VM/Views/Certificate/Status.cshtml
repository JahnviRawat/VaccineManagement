@model CO_VM.Models.Booking
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Update User Status</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, rgba(9, 87, 149, 0.6), rgba(9, 87, 149, 0.6));
            height: 100vh;
            overflow: hidden;
        }

        .split-screen {
            display: flex;
            height: 100vh;
            padding-top: 60px;
        }

        .form-half {
            width: 50%;
            background: #f9fbff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .info-half {
            width: 50%;
            background: linear-gradient(135deg, rgba(9, 87, 149, 0.6), rgba(9, 87, 149, 0.6));
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px;
        }

            .info-half h2 {
                font-weight: 700;
                font-size: 32px;
                margin-bottom: 20px;
            }

            .info-half p {
                font-size: 18px;
                line-height: 1.6;
            }

        .status-card {
            background: #fff;
            padding: 2.5rem 2rem;
            border-radius: 16px;
            box-shadow: 0 6px 32px rgba(0, 60, 120, 0.1);
            width: 100%;
            max-width: 480px;
        }

        .form-label {
            font-weight: 600;
            color: #1e293b;
        }

        .form-control {
            margin-bottom: 1.2rem;
            border-radius: 8px;
        }

        .btn-submit {
            width: 100%;
            padding: 10px;
            font-size: 1.05em;
            border-radius: 8px;
            background: linear-gradient(90deg, #2563eb 0%, #60a5fa 100%);
            border: none;
            color: white;
            font-weight: 600;
        }

            .btn-submit:hover {
                background: linear-gradient(90deg, #1d4ed8 0%, #3b82f6 100%);
            }

        .status-message {
            margin-top: 1rem;
            font-weight: 500;
            color: green;
        }

        media (max-width: 991px) {
            .split-screen

        {
            flex-direction: column;
        }

        .form-half, .info-half {
            width: 100%;
            height: auto;
        }

        .info-half {
            padding: 40px 24px;
        }

        }
    </style>
</head>
<body>
    <div class="split-screen">
        <!-- Left Info -->
        <div class="info-half">
            <h2>Update User Status</h2>
            <p>
                Update the user’s vaccination status by entering the booking ID, dose number, and vaccination date.<br />
                Ensure the details are accurate as they will reflect in the final certificate generation.
            </p>
        </div>

        <!-- Right Form -->
        <div class="form-half">
            <div class="status-card">
                <h4 class="text-center text-primary fw-bold mb-4">Vaccination Status Form</h4>
                <form method="post" asp-action="Status">
                    <label class="form-label">Book ID</label>
                    <input type="text" asp-for="BookId" class="form-control" required />

                    <label class="form-label">Dose Number</label>
                    <input type="text" asp-for="DoseNumber" class="form-control" required />

                    <label class="form-label">Vaccination Date</label>
                    <input type="date" asp-for="VaccinatedOn" class="form-control" required />

                    <button type="submit" class="btn-submit mt-3">Update</button>
                </form>
                @if (!string.IsNullOrEmpty(ViewBag.Status))
                {
                    <div class="status-message">@ViewBag.Status</div>
                }
            </div>
        </div>
    </div>
</body>
</html>
