@model CO_VM.Models.Booking;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Create Certificate</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, rgba(9, 87, 149, 0.6), rgba(9, 87, 149, 0.6));
            height: 100vh;
            overflow: hidden;
        }

        .split-screen {
            display: flex;
            height: 100vh;
            padding-top: 60px;
        }

        .form-half {
            width: 50%;
            background: #f9fbff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .info-half {
            width: 50%;
            background: linear-gradient(135deg, rgba(9, 87, 149, 0.6), rgba(9, 87, 149, 0.6));
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px;
        }

            .info-half h2 {
                font-weight: 700;
                font-size: 32px;
                margin-bottom: 20px;
            }

            .info-half p {
                font-size: 18px;
                line-height: 1.6;
            }

        .certificate-card {
            background: #fff;
            padding: 2.5rem 2rem;
            border-radius: 16px;
            box-shadow: 0 6px 32px rgba(0, 60, 120, 0.1);
            width: 100%;
            max-width: 480px;
        }

        .form-label {
            font-weight: 600;
            color: #1e293b;
        }

        .form-control {
            margin-bottom: 1.5rem;
        }

        .btn-submit {
            width: 100%;
            padding: 10px;
            font-size: 1.05em;
            border-radius: 8px;
            background: linear-gradient(90deg, #2563eb 0%, #60a5fa 100%);
            border: none;
            color: white;
            font-weight: 600;
        }

            .btn-submit:hover {
                background: linear-gradient(90deg, #1d4ed8 0%, #3b82f6 100%);
            }

        .message-box {
            margin-top: 1rem;
            font-weight: 500;
            color: green;
        }

        media (max-width: 991px) {
            .split-screen

        {
            flex-direction: column;
        }

        .form-half, .info-half {
            width: 100%;
            height: auto;
        }

        .info-half {
            padding: 40px 24px;
        }

        }
    </style>
</head>
<body>
    <div class="split-screen">
        <!-- Left Info -->
        <div class="info-half">
            <h2>Generate Certificate</h2>
            <p>
                Enter the date of certification for the selected user. This certificate will be generated and linked to the associated booking.
                Ensure the date provided is correct and matches official documentation.
            </p>
        </div>

        <!-- Right Form -->
        <div class="form-half">
            <div class="certificate-card">
                <h3 class="text-center mb-4 text-primary fw-bold">Create Certificate</h3>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-info text-center">@ViewBag.Message</div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label for="certificateDate" class="form-label">Certification Date</label>
                        <input type="date" id="certificateDate" name="certificateDate" class="form-control" required />
                    </div>
                    <button type="submit" class="btn-submit">Create Certificate</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>