@model CO_VM.Models.Vaccine
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Update Vaccine Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #e3f0ff 0%, #f8fbff 100%);
            min-height: 100vh;
        }

        .centered-container {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .update-form-container {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.08);
            padding: 2.5rem 2.5rem 2rem 2.5rem;
            width: 100%;
            max-width: 480px;
        }

        .form-label {
            font-weight: 500;
        }

        .edit-btn {
            background: none;
            border: none;
            color: #0d6efd;
            margin-left: 8px;
            font-size: 1rem;
            cursor: pointer;
            transition: color 0.2s;
        }

            .edit-btn:hover {
                color: #0a58ca;
            }

        .form-control {
            margin-bottom: 1rem;
        }

        .search-form {
            margin-bottom: 2rem;
            display: flex;
            justify-content: center;
        }

            .search-form input[type="text"] {
                width: 220px;
                margin-right: 10px;
            }

        .alert {
            max-width: 480px;
            margin: 0 auto 1rem auto;
        }
    </style>
</head>
<body>
    <div class="centered-container">
        <h2 class="mb-4 text-center fw-bold" style="color:#0d6efd;">Update Vaccine Details</h2>
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        @if (!string.IsNullOrEmpty(ViewBag.Success))
        {
            <div class="alert alert-success">@ViewBag.Success</div>
        }
        <div class="search-form">
            <form method="get" asp-action="UpdateVaccine" class="d-flex">
                <input type="text" name="id" class="form-control" placeholder="Enter the Vaccine Id" />
                <input type="submit" value="Search" class="btn btn-primary ms-2" />
            </form>
        </div>
        @if (Model != null)
        {
            <div class="update-form-container">
                <form method="post" asp-action="UpdateVaccine">
                    <input type="hidden" asp-for="VaccineId" />

                    <div class="mb-3">
                        <label class="form-label">Vaccine Name</label>
                        <div class="d-flex align-items-center">
                            <span id="VaccineNameDisplay">@Model.VaccineName</span>
                            <button type="button" class="edit-btn" onclick="toggleEdit('VaccineName')" title="Edit">&#9998;</button>
                        </div>
                        <input asp-for="VaccineName" name="VaccineName" class="form-control d-none" id="VaccineNameInput" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Manufacturer</label>
                        <div class="d-flex align-items-center">
                            <span id="ManufacturerDisplay">@Model.Manufacturer</span>
                            <button type="button" class="edit-btn" onclick="toggleEdit('Manufacturer')" title="Edit">&#9998;</button>
                        </div>
                        <input asp-for="Manufacturer" name="Manufacturer" class="form-control d-none" id="ManufacturerInput" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Doses Required</label>
                        <div class="d-flex align-items-center">
                            <span id="DosesRequiredDisplay">@Model.DosesRequired</span>
                            <button type="button" class="edit-btn" onclick="toggleEdit('DosesRequired')" title="Edit">&#9998;</button>
                        </div>
                        <input asp-for="DosesRequired" name="DosesRequired" class="form-control d-none" id="DosesRequiredInput" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Available Stock</label>
                        <div class="d-flex align-items-center">
                            <span id="StockDisplay">@Model.Stock</span>
                            <button type="button" class="edit-btn" onclick="toggleEdit('Stock')" title="Edit">&#9998;</button>
                        </div>
                        <input asp-for="Stock" name="Stock" class="form-control d-none" id="StockInput" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <div class="d-flex align-items-center">
                            <span id="PriceDisplay">@Model.Price</span>
                            <button type="button" class="edit-btn" onclick="toggleEdit('Price')" title="Edit">&#9998;</button>
                        </div>
                        <input asp-for="Price" name="Price" class="form-control d-none" id="PriceInput" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <div class="d-flex align-items-center">
                            <span id="DescriptionDisplay">@Model.Description</span>
                            <button type="button" class="edit-btn" onclick="toggleEdit('Description')" title="Edit">&#9998;</button>
                        </div>
                        <input asp-for="Description" name="Description" class="form-control d-none" id="DescriptionInput" />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success fw-semibold">Update</button>
                    </div>
                </form>
                @if (!string.IsNullOrEmpty(ViewBag.s))
                {
                    <span class="d-block mt-3 text-success">@ViewBag.s</span>
                }
            </div>
        }
    </div>

    <script>
        function toggleEdit(field) {
            document.getElementById(field + 'Display').classList.toggle('d-none');
            document.getElementById(field + 'Input').classList.toggle('d-none');
            if (!document.getElementById(field + 'Input').classList.contains('d-none')) {
                document.getElementById(field + 'Input').focus();
            }
        }
    </script>
</body>
</html>
