@model CO_VM.Models.Admin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Admin Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #e3f0ff 0%, #f8fbff 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
            padding: 40px 36px 32px 36px;
            max-width: 420px;
            width: 100%;
        }

        .login-title {
            text-align: center;
            font-weight: 700;
            color: #2a3b5d;
            margin-bottom: 18px;
        }

        .form-label {
            font-weight: 600;
            color: #2a3b5d;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn-success {
            width: 100%;
            font-weight: 600;
            border-radius: 8px;
        }

        .captcha-box {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
        }

        #captcha-code {
            font-family: 'Courier New', Courier, monospace;
            font-size: 1.1rem;
            letter-spacing: 2px;
            background: #f0f4fa;
            border-radius: 6px;
            min-width: 80px;
            text-align: center;
        }

        .text-danger {
            font-size: 0.95rem;
        }

        .success-message {
            background-color: #d4edda;
            color: #155724;
            border-radius: 6px;
            padding: 8px 12px;
            margin-bottom: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h1 class="login-title">Admin Login</h1>
        <hr />
        <form method="post" autocomplete="off">
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-2" })

            <div class="mb-3">
                <label class="form-label"><strong>Username</strong></label>
                @Html.TextBoxFor(c => c.Username, new { @class = "form-control", placeholder = "Enter your username" })
                @Html.ValidationMessageFor(c => c.Username, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Password</strong></label>
                @Html.PasswordFor(c => c.Password, new { @class = "form-control", placeholder = "Enter your password" })
                @Html.ValidationMessageFor(c => c.Password, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Captcha</strong></label>
                <div class="captcha-box">
                    <span id="captcha-code"></span>
                    <button type="button" onclick="refreshCaptcha();" class="btn btn-link p-0" title="Refresh Captcha">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#0d6efd" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 3a5 5 0 1 1-4.546 2.914.5.5 0 1 1 .908-.418A4 4 0 1 0 8 4V1.5a.5.5 0 0 1 1 0v3A.5.5 0 0 1 8.5 5h-3a.5.5 0 0 1 0-1H8z" />
                        </svg>
                    </button>
                </div>
                <input type="text" name="Captcha" class="form-control" placeholder="Enter captcha" autocomplete="off" />
                <span class="text-danger">@ViewBag.CaptchaError</span>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.a as string))
            {
                <div class="success-message">@ViewBag.a</div>
            }

            <button type="submit" class="btn btn-success mt-2">Login</button>
        </form>
    </div>
    <script>
        function refreshCaptcha() {
            fetch('@Url.Action("Captcha", "Vaccine")')
                .then(response => response.text())
                .then(data => {
                    document.getElementById('captcha-code').innerText = data;
                });
        }
        window.onload = function () {
            refreshCaptcha();
        };
    </script>
</body>
</html>
