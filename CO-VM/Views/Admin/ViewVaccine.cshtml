@model List<CO_VM.Models.Vaccine>

<style>
    body {
        background: linear-gradient(135deg, #e3f0ff 0%, #f8fbff 100%);
        min-height: 100vh;
        margin: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .vaccine-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    .vaccine-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        padding: 32px 40px;
        margin: 24px 0;
        width: 100%;
        max-width: 420px;
        text-align: left;
        transition: box-shadow 0.2s;
    }

        .vaccine-card:hover {
            box-shadow: 0 8px 32px rgba(0,0,0,0.12);
        }

        .vaccine-card img {
            display: block;
            margin: 0 auto 18px auto;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.07);
            max-width: 100%;
            height: 180px;
            object-fit: cover;
            background: #f0f4fa;
        }

    .vaccine-label {
        font-weight: 600;
        color: #2a4365;
        margin-right: 6px;
    }

    .vaccine-value {
        color: #334e68;
    }

    .vaccine-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2563eb;
        margin-bottom: 10px;
    }
</style>

<div class="vaccine-container">
    @foreach (var i in Model)
    {
        <div class="vaccine-card">
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(i.Image)" alt="Vaccine image" />
            <div class="vaccine-title">@i.VaccineName</div>
            <div><span class="vaccine-label">VaccineId:</span> <span class="vaccine-value">@i.VaccineId</span></div>
            <div><span class="vaccine-label">Manufacturer:</span> <span class="vaccine-value">@i.Manufacturer</span></div>
            <div><span class="vaccine-label">Doses Required:</span> <span class="vaccine-value">@i.DosesRequired</span></div>
            <div><span class="vaccine-label">Stock:</span> <span class="vaccine-value">@i.Stock</span></div>
            @* <div><span class="vaccine-label">Price:</span> <span class="vaccine-value">@i.Price</span></div> *@
            <div><span class="vaccine-label">Description:</span> <span class="vaccine-value">@i.Description</span></div>
        </div>
    }
</div>