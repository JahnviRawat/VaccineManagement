@model CO_VM.Models.User

@{
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin - Delete User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, rgba(9, 87, 149, 0.6), rgba(9, 87, 149, 0.6));
            height: 100vh;
            overflow: hidden;
        }

        .split-screen {
            display: flex;
            padding-top: 60px;
            height: 100vh;
        }

        .form-half {
            width: 50%;
            background: #f9fbff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            overflow-y: auto;
        }

        .info-half {
            width: 50%;
            background: linear-gradient(135deg, rgba(9, 87, 149, 0.6), rgba(9, 87, 149, 0.6));
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px;
        }

            .info-half h2 {
                font-weight: 700;
                font-size: 32px;
                margin-bottom: 20px;
            }

            .info-half p {
                font-size: 18px;
                line-height: 1.6;
            }

        .delete-card {
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 6px 32px rgba(0, 60, 120, 0.10);
            padding: 2.5rem 2rem;
            width: 100%;
            max-width: 520px;
        }

            .delete-card h1 {
                text-align: center;
                margin-bottom: 1.5rem;
                color: #2563eb;
                font-weight: 700;
                letter-spacing: 1px;
            }

        label {
            font-weight: 600;
            color: #1e293b;
        }

        .form-control {
            margin-bottom: 1rem;
            border-radius: 8px;
            border: 1px solid #b6d0f7;
        }

            .form-control:focus {
                border-color: #2563eb;
                box-shadow: 0 0 0 2px #dbeafe;
            }

        .btn-primary, .btn-danger {
            width: 100%;
            padding: 10px;
            font-size: 1.05em;
            border-radius: 8px;
            border: none;
            font-weight: 600;
        }

        .btn-primary {
            background: linear-gradient(90deg, #2563eb 0%, #60a5fa 100%);
            color: #fff;
        }

            .btn-primary:hover {
                background: linear-gradient(90deg, #1d4ed8 0%, #3b82f6 100%);
            }

        .btn-danger {
            background: linear-gradient(90deg, #e53e3e 0%, #f87171 100%);
            color: #fff;
        }

            .btn-danger:hover {
                background: linear-gradient(90deg, #c53030 0%, #f56565 100%);
            }

        .user-details {
            background: #f1f6fb;
            border-radius: 10px;
            padding: 1rem 1.25rem;
            margin: 1.5rem 0;
            font-size: 0.97rem;
        }

            .user-details div {
                margin-bottom: 0.5rem;
            }

            .user-details label {
                font-weight: 600;
                color: #1e293b;
                margin-right: 8px;
            }

        media (max-width: 991px) {
            .split-screen

        {
            flex-direction: column;
        }

        .form-half, .info-half {
            width: 100%;
            height: auto;
        }

        .info-half {
            padding: 40px 24px;
        }

        }
    </style>
</head>
<body>
    <div class="split-screen">
        <!-- Form Half -->
        <div class="form-half">
            <div class="delete-card">
                <h1>Delete User</h1>
                <form method="get" autocomplete="off">
                    <label for="userIdInput">User ID</label>
                    <input type="text" id="userIdInput" name="id" class="form-control" placeholder="Enter User ID" required />
                    <button type="submit" class="btn btn-primary mt-2">Search</button>
                </form>

                @if (Model != null)
                {
                    <div class="user-details mt-4">
                        <div><label>User ID:</label> @Model.UserId</div>
                        <div><label>Username:</label> @Model.Username</div>
                        <div><label>Full Name:</label> @Model.FullName</div>
                        <div><label>Email:</label> @Model.Email</div>
                        <div><label>Aadhaar No:</label> @Model.AadhaarNo</div>
                        <div><label>Gender:</label> @Model.Gender</div>
                        <div><label>City:</label> @Model.City</div>
                        <div><label>State:</label> @Model.State</div>
                    </div>
                    <form method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button type="submit" class="btn btn-danger">Delete User</button>
                    </form>
                }
            </div>
        </div>

        <!-- Info Half -->
        <div class="info-half">
            <h2>Admin - Delete User</h2>
            <p>
                Use this panel to remove users from the system based on their User ID.<br /><br />
                Please make sure you have verified the user details before deletion.<br /><br />
                This action is irreversible and permanently deletes the user's data.
            </p>
        </div>
    </div>
</body>
</html>
