@model CO_VM.Models.Vaccine
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Add Vaccine</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #e3f0ff 0%, #f8fbff 100%);
            min-height: 100vh;
        }

        .center-card {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .vaccine-card {
            width: 100%;
            max-width: 600px;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
            padding: 2.5rem 2.5rem 2rem 2.5rem;
        }

        h1 {
            text-align: center;
            color: #2a4365;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        label {
            font-weight: 500;
            color: #2a4365;
        }

        .btn-info {
            width: 100%;
            font-weight: 500;
            background-color: #3182ce;
            border: none;
        }

            .btn-info:hover {
                background-color: #2563eb;
            }
    </style>
</head>
<body>
    <div class="center-card">
        <div class="vaccine-card">
            <h1>ADD VACCINE</h1>
            <hr />
            <form method="post" asp-action="AddVaccine" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label">Vaccine Name:</label>
                    <input type="text" asp-for="VaccineName" class="form-control" />
					<span asp-validation-for="VaccineName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Manufacturer Name:</label>
                    <input type="text" asp-for="Manufacturer" class="form-control" />
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Dosage of the Vaccine:</label>
                    <input type="number" asp-for="DosesRequired" class="form-control" />
                    <span asp-validation-for="DosesRequired" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Available Stock:</label>
                    <input type="number" asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Upload the Image:</label>
                    <input type="file" name="imagefile" class="form-control" accept="image/*" required />
                    <span style="color:blue; font-size:small">Supported types .jpg, .png</span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Price:</label>
                    <input type="number" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Description:</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input type="submit" value="Add" class="btn btn-info" />
            </form>
        </div>
    </div>
</body>
</html>