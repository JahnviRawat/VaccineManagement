@model CO_VM.Models.Vaccine

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Delete Vaccine</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, rgba(9, 87, 149, 0.6), rgba(9, 87, 149, 0.6));
            height: 100vh;
            overflow: hidden;
        }

        .split-screen {
            display: flex;
            height: 100vh;
            padding-top: 60px;
        }

        .form-half {
            width: 50%;
            background: #f9fbff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            overflow-y: auto;
        }

        .info-half {
            width: 50%;
            background: linear-gradient(135deg, rgba(9, 87, 149, 0.6), rgba(9, 87, 149, 0.6));
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px;
        }

            .info-half h2 {
                font-weight: 700;
                font-size: 32px;
                margin-bottom: 20px;
            }

            .info-half p {
                font-size: 18px;
                line-height: 1.6;
            }

        .form-card {
            background: #fff;
            padding: 2.5rem 2rem;
            border-radius: 18px;
            box-shadow: 0 6px 32px rgba(0, 60, 120, 0.10);
            width: 100%;
            max-width: 500px;
        }

        .form-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: #2563eb;
            text-align: center;
        }

        .form-label {
            font-weight: 500;
            color: #2a4365;
            margin-bottom: 0.4rem;
        }

        .form-control {
            width: 100%;
            padding: 0.5rem 0.75rem;
            border-radius: 6px;
            border: 1px solid #bcd0ee;
            font-size: 1rem;
            margin-bottom: 1rem;
        }

        .btn {
            padding: 0.6rem 1.2rem;
            font-weight: 600;
            font-size: 1rem;
            border: none;
            border-radius: 6px;
            width: 100%;
            cursor: pointer;
        }

        .btn-primary {
            background: linear-gradient(90deg, #2563eb 0%, #60a5fa 100%);
            color: white;
        }

            .btn-primary:hover {
                background: linear-gradient(90deg, #1e40af 0%, #3b82f6 100%);
            }

        .vaccine-details {
            background: #f1f6fb;
            padding: 1.2rem;
            border-radius: 10px;
            margin-top: 1.5rem;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
        }

            .vaccine-details div {
                margin-bottom: 0.5rem;
            }

            .vaccine-details label {
                font-weight: 600;
                margin-right: 0.5rem;
                color: #1e293b;
            }

        .vaccine-image {
            max-width: 100px;
            max-height: 100px;
            display: block;
            margin-bottom: 1rem;
            border-radius: 6px;
            border: 1px solid #bcd0ee;
        }

        media (max-width: 991px) {
            .split-screen

        {
            flex-direction: column;
        }

        .form-half, .info-half {
            width: 100%;
            height: auto;
        }

        .info-half {
            padding: 40px 24px;
        }

        }
    </style>
</head>
<body>
    <div class="split-screen">
        <!-- Left: Form -->
        <div class="form-half">
            <div class="form-card">
                <div class="form-title">Delete Vaccine</div>
                <form method="get" class="mb-3">
                    <label class="form-label" for="vaccineId">Vaccine ID</label>
                    <input type="text" id="vaccineId" name="id" class="form-control" placeholder="Enter Vaccine ID" />
                    <button type="submit" class="btn btn-primary mt-2">Search</button>
                </form>

                @if (Model != null)
                {
                    <div class="vaccine-details">
                        @* Uncomment if image is to be shown *@
                        @* <img src="@Model.Image" alt="Vaccine Image" class="vaccine-image" /> *@
                        <div><label>ID:</label> @Model.VaccineId</div>
                        <div><label>Name:</label> @Model.VaccineName</div>
                        <div><label>Manufacturer:</label> @Model.Manufacturer</div>
                        <div><label>Doses Required:</label> @Model.DosesRequired</div>
                        <div><label>Stock:</label> @Model.Stock</div>
                        <div><label>Price:</label> ₹@Model.Price</div>
                        <div><label>Description:</label> @Model.Description</div>
                    </div>

                    <form method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                }
            </div>
        </div>

        <!-- Right: Info -->
        <div class="info-half">
            <h2>Delete Vaccine Record</h2>
            <p>
                Enter the vaccine ID to view and delete a vaccine from the system. Please make sure you’ve verified the data before proceeding.<br /><br />
                This action is permanent and cannot be undone.
            </p>
        </div>
    </div>
</body>
</html>
